<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.customer_mode.fragments.sub_fragments.CustomerOrderDetailsFragment">

    <TextView
        android:id="@+id/ord_det_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="15dp"
        android:text="Detalles del pedido"
        android:textColor="#F2F1F1"
        android:textFontWeight="1000"
        android:textSize="20sp" />

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ord_det_infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/ord_det_restaurantLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="restaurant"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ord_det_totalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="total"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ord_det_dateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="fecha"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ord_det_statusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="status"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ord_det_rvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>